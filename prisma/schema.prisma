generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Customer {
  id        Int      @id @default(autoincrement())
  name      String
  document  String   @unique
  phone     String?
  address   String?
  createdAt DateTime @default(now())

  invoices Invoice[]

  @@map("customers")
}

model Invoice {
  id           Int       @id @default(autoincrement())
  customerId   Int?
  customer     Customer? @relation(fields: [customerId], references: [id])
  customerName String?
  type         String
  document     String?
  ncf          String?
  items        Json
  subtotal     Float
  taxes        Float
  total        Float
  createdAt    DateTime  @default(now())

  @@map("invoices")
}

model Company {
  id                         Int      @id @default(autoincrement())
  name                       String
  rnc                        String   @unique
  address                    String
  phoneNumber                String
  secondPhoneNumber          String?
  nextGovernmentalNCF        String
  nextGovernmentalExpiration DateTime
  nextCreditNCF              String
  nextCreditExpiration       DateTime
  nextEndConsumerNCF         String
  nextEndConsumerExpiration  DateTime
  nextQuoteNumber            Int      @default(1)
  createdAt                  DateTime @default(now())
  updatedAt                  DateTime @updatedAt

  @@map("company")
}

model Inventory {
  id    Int    @id @default(autoincrement())
  code  String @unique
  name  String
  price Float

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("inventory")
}

model Sales {
  id        Int      @id @default(autoincrement())
  item      String
  quantity  Int
  price     Float
  total     Float
  createdAt DateTime @default(now())

  @@map("sales")
}
